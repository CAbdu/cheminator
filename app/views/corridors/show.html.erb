            <div class="card-image" style="background-image: url('<%= image_path(@corridor.planet.image)%>');">
            </div>
          </div>
          <div class="col-xs-12 col-md-12">
            <div class="card-informations">
              <h2> Planet informations </h2>
              <p> Temperature: <%= @corridor.planet.temperature%>Â°C</p>
