              <p> Environment: <%= @corridor.planet.environment%> </p>
            </div>
          </div>
        </div>
      </div>

      <div class="col-xs-12 col-md-6">
        <div class="card-info">
          <div class="col-xs-12 col-md-12">
            <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://68.media.tumblr.com/4170a36a91012ab839658113909762d5/tumblr_mm7nhfz9yP1rx0ahxo1_400.gif');">
